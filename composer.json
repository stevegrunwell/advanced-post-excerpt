{
    "name": "stevegrunwell/advanced-post-excerpt",
    "description": "Replace the default Post Excerpt meta box with a superior editing experience.",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Grunwell",
            "homepage": "https://stevegrunwell.com"
        }
    ],
    "support": {
        "source": "https://github.com/stevegrunwell/advanced-post-excerpt",
        "issues": "https://github.com/stevegrunwell/advanced-post-excerpt/issues"
    },
    "require-dev": {
        "assertwell/wp-core-test-framework": "^0.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.1",
        "phpunit/phpunit": "^6.5 | ^7.5 | ^9.5 | ^10.0",
        "stevegrunwell/phpunit-markup-assertions": "^1.2",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:standards"
        ],
        "test:standards": [
            "phpcs"
        ],
        "test:unit": [
            "phpunit --testdox --colors=always"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all unit tests and check coding standards.",
        "test:standards": "Check coding standards.",
        "test:unit": "Run the PHPUnit test suite."
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
